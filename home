<script>
    $(document).ready(function(e){
        init(e);
        loadMallDataCached(renderPage);
    })
    
    function renderPage(){
        var banners = getBanners();
        
        renderFeatureItems();
        
        renderBanner('#banner_template','#home_banner',banners);
        $('.flexslider').flexslider({
            animation: "fade",
        });
        get_insta("/instagram.json", 4, 'standard_resolution', render_instagram);
        show_content();
        if(getPopups().length > 0){
            var popup = getPopups()[0];
            $(".popup_img").attr("src", "//mallmaverick.com"+ popup.photo_url)
            if($.cookie("popup_viewed") != "true"){
                $.cookie("popup_viewed", "true", { expires: 1 });
                $('<div class="modal-backdrop custom_backdrop popup_backdrop hidden_phone"></div>').appendTo(document.body);
                $('.popup_home').show();
                $('body').addClass('no_scroll');
            }
            $('.close_popup, .custom_backdrop').click(function(){
                $(".modal-backdrop").remove();
    	        $(".popup_home").remove();
    	        $('body').removeClass('no_scroll');
            })
        }
        
    }
</script>
